
@{
    ViewBag.Title = "Index";
    BusHelperDAL.Beacon_BusStop obj = ViewBag.obj;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Mapping Beacon & Bus Stop
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Quick Example</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form" action="@Url.Action("Update", "Beacon_BusStop")" method="post">
            <input type="hidden" name="id" value="@obj.id" />
            <div class="box-body">
                <div class="form-group">
                    <label for="uuid">UUID</label>
                    <input name="uuid" value="@(obj.uuid)" id="uuid" type="text" class="form-control" placeholder="Enter UUID">
                </div>
                <div class="form-group">
                    <label for="major">Major</label>
                    <input name="major" value="@(obj.major)" type="number" class="form-control" id="major" placeholder="Enter major">
                </div>
                <div class="form-group">
                    <label for="minor">Minor</label>
                    <input name="Minor" value="@(obj.minor)" type="number" class="form-control" id="minor" placeholder="Enter minor">
                </div>
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
    <!-- /.box -->
</section>