@using BusHelperDAL
@{
    ViewBag.Title = "Index";
    BusInfo_Vehicle obj = ViewBag.obj;
    List<BusInfo> busInfos = ViewBag.BusInfos;
    List<Vehicle> vehicles = ViewBag.Vehicles;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Mapping Bus & Vehicle
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <!-- general form elements -->
    <div class="box box-primary">
        <!-- form start -->
        <form role="form" action="@Url.Action("Update", "BusInfo_Vehicle")" method="post">
            <input type="hidden" name="id" value="@obj.id" />
            <div class="box-body">
                <div class="form-group">
                    <label for="bus_info_id">Bus Info</label>
                    <select name="bus_info_id" id="bus_info_id" class="form-control">
                        @foreach (var item in busInfos)
                        {
                            <option @((item.id == obj.bus_info_id) ? "selected" : "") value="@item.id">@item.number</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="vehicle_id">Vehicle</label>
                    <select name="vehicle_id" id="vehicle_id" class="form-control">
                        @foreach (var item in vehicles)
                        {
                            <option @((item.id == obj.vehicle_id) ? "selected" : "") value="@item.id">@item.number - @item.driver_name</option>
                        }
                    </select>
                </div>
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
    <!-- /.box -->
</section>